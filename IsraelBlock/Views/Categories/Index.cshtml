@model IEnumerable<IsraelBlock.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <p>
        @Html.ActionLink("Criar novo", "Create")
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CategoryId }) |
                        @Html.ActionLink("Deletar", "Delete", new { id = item.CategoryId })
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
