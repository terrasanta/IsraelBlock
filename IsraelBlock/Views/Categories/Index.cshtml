@model IEnumerable<IsraelBlock.Models.Category>

@{
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";
    ViewBag.Title = "Categorias";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
    <p>
        @Html.ActionLink("Criar novo", "Create", null, new { @class = "btn btn-primary"})
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CategoryId }) |
                        @Html.ActionLink("Deletar", "Delete", new { id = item.CategoryId })
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
