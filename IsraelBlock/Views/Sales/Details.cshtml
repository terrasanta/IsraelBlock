@model IsraelBlock.Models.Sale

@{
    ViewBag.Title = "Detalhes da Venda";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Detalhes da Venda
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.NameClient, "Nome do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
