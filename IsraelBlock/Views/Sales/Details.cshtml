                    @Html.EditorFor(model => model.NameClient, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.NameClient, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CpfClient, "CPF do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
