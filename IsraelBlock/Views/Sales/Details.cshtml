                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Alterar", "Edit", new { id = Model.SaleId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Items/_listItens.cshtml", Model.Items)