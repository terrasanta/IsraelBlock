@model IsraelBlock.Models.Sale

@{
    ViewBag.Title = "Alterar Venda";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TotalSale)
    @Html.HiddenFor(model => model.Closed)
    @Html.HiddenFor(model => model.DateSale)
    <div class="panel panel-default">
        <div class="panel-heading">
            Alterar Venda
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SaleId)
                @Html.HiddenFor(model => model.TotalSale)

                <div class="form-group">
                    @Html.LabelFor(model => model.NameClient, "Nome do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NameClient, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameClient, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CpfClient, "CPF do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CpfClient, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CpfClient, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, "Telefone do Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DateSale, "Data da Venda", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateSale, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.DateSale, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NrNota, "Nota Fiscal", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NrNota, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NrNota, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TotalSale, "Total da Venda", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TotalSale, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.TotalSale, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Atualiza Venda" class="btn btn-danger" />
                        @if (string.IsNullOrEmpty(Model.Closed) || Model.Closed== "N")
                        {
                            <input type="submit" value="Finaliza Venda" id="finalizaVenda" class="btn btn-danger" />
                        }
                        @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Html.Partial("~/Views/Items/_Create.cshtml", new IsraelBlock.Models.Item() { SaleId = Model.SaleId })
@Html.Partial("~/Views/Items/_listItens.cshtml", Model.Items)

