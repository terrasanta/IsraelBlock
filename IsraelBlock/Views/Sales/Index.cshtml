@model IEnumerable<IsraelBlock.Models.Sale>

@{
    ViewBag.Title = "Index";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">
        LISTA DE VENDAS
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Venda
                    </th>
                    <th>
                        Nota
                    </th>
                    <th>
                        Data da Venda
                    </th>
                    <th>
                        Nome do Cliente
                    </th>
                    <th>
                        CPF Cliente
                    </th>
                    <th>
                        Telefone
                    </th>
                    <th>
                        Total da Venda
                    </th>
                    <th>
                        Status da Venda
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaleId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NrNota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameClient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CpfClient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Closed)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.SaleId }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.SaleId }) |
                            @Html.ActionLink("Excluir", "Delete", new { id = item.SaleId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>

